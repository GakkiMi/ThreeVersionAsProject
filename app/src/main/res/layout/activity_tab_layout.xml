<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.threeversionasproject.TabLayoutActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/activity_tab_layout_tablayout"
        android:layout_width="match_parent"
        app:tabMode="scrollable"
        app:tabGravity="center"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/colorDatePress"
        app:tabTextAppearance="@style/CustomTabTextAppearanceStyle"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/activity_tab_layout_framelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_tab_layout_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
